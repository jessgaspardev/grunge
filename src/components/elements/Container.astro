---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div">{
    variant?: "full" | "w80" | "w66" | "w50" | "w33" | "w25"
}

const { variant = "full", class: className, ...rest} = Astro.props;

const baseStyle = "w-full"

// different width sizes for each container variant
const variantStyle = {
    full: "",
    w80: "xl:max-w-8/10 m-auto",
    w66: "max-w-2/3 m-auto",
    w50: "max-w-1/2",
    w33: "max-w-1/3",
    w25: "max-w-1/4"
}
---

<div class:list={[baseStyle, variantStyle[variant], className]} {...rest}>
    <slot />
</div>
